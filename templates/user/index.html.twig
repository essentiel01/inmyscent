{% extends './admin/index.html.twig' %}

    {% block title %}liste des utilisateurs{% endblock %}

    {% block currentPageTitle %}
        {# <h1> {{ title }} </h1>
        <h2> {{ subTitle }} </h2> #}
    {% endblock %}

    {% block nav %}{% endblock %}
    
    {% block main %}
    <div class="container user-container">
        <div class="btn-create">
            <h1>Liste des utilisateurs</h1>
            <a class="btn btn-primary" title="ajouter un nouvel utilisateur" href="{{ path('fos_user_registration_register') }}">Ajouter un nouvel utilisateur</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom d'utilisateur</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                {{ role }}
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endblock %}
    
