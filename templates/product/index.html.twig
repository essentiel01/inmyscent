{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block main %}
<div class="product-container index">
    <div class="btn-create">
        <h1>Liste des parfums</h1>
        <a class="btn btn-primary" href="{{ path('product_new') }}">Ajouter un parfum</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Type</th>
                <th>Created_at</th>
                <th>TopNotes</th>
                <th>FamilyNotes</th>
                <th>BaseNotes</th>
                <th>HeartNotes</th>
                <th>Notes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.gender }}</td>
                <td>{{ product.type }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.topNotes }}</td>
                <td>{{ product.familyNotes }}</td>
                <td>{{ product.baseNotes }}</td>
                <td>{{ product.heartNotes }}</td>
                <td>{{ product.notes }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('product_show', {'id': product.id}) }}">Afficher</a>
                    <a class="btn btn-warning" href="{{ path('product_edit', {'id': product.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
